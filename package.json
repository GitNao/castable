    "jest": "^22.0.3",
    "ts-jest": "^22.0.0",
    "typescript": "^2.5.3"
  },
  "jest": {
    "transform": {
      "^.+\\.tsx?$": "<rootDir>/node_modules/ts-jest/preprocessor.js"
